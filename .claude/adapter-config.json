{
  "adapter_name": "claude-code",
  "adapter_type": "anthropic",
  "display_name": "Claude Code (Anthropic)",
  "version": "1.0.0",
  "description": "Claude Code adapter for Anthropic's Claude AI with MCP support",
  "capabilities": {
    "supports_mcp": true,
    "supports_markdown_commands": true,
    "supports_file_operations": true,
    "supports_bash_execution": true,
    "supports_multi_modal": true
  },
  "model_config": {
    "default_models": {
      "opus": "GLM-4.7",
      "sonnet": "GLM-4.7",
      "haiku": "GLM-4.5-Air"
    },
    "token_limits": {
      "opus": 200000,
      "sonnet": 200000,
      "haiku": 200000
    },
    "fallback_model": "GLM-4.5-Air"
  },
  "api_config": {
    "base_url": "https://api.z.ai/api/anthropic",
    "timeout_ms": 3000000,
    "max_retries": 3,
    "retry_delay_ms": 1000
  },
  "context_config": {
    "loading_strategy": "full_with_selective_rag",
    "priority_sections": [
      "AGENT.md",
      "WORKFLOWS.md",
      "commands/{current-task}.md",
      "config/agents.json"
    ],
    "rag_tools": ["archon", "supabase"]
  },
  "supported_features": [
    "markdown_commands",
    "mcp_tools",
    "file_operations",
    "bash_execution",
    "web_search",
    "image_analysis"
  ],
  "mcp_integration": {
    "enabled": true,
    "available_servers": [
      "archon",
      "supabase",
      "filesystem",
      "web-search"
    ],
    "required_servers": ["archon"]
  },
  "workflow_support": {
    "supported_commands": [
      "/prime",
      "/discovery",
      "/planning",
      "/development",
      "/task-planning",
      "/execution",
      "/review",
      "/test",
      "/workflow"
    ]
  },
  "adapter_directory": ".claude/",
  "adapter_files": [
    "AGENT.md",
    "WORKFLOWS.md",
    "CLAUDE.md",
    "settings.json",
    "adapter-config.json"
  ]
}
